{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 400px;
            margin: auto;
            margin-top: 50px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        input {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            border: 1px solid #ced4da;
            border-radius: 4px;
            margin-top: 5px;
        }

        button {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #218838;
        }

        p {
            margin-top: 15px;
            text-align: center;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input placeholder="Adresse email..." required name="_username" type="text">
            </div>
            <div class="form-group">
                <input placeholder="Mot de passe..." required name="_password" type="password">
            </div>
            <div class="form-group">
                <button type="submit">Connexion</button>
            </div>
        </form>
        
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            <p>Vous n'avez pas de compte ? <a href="{{ path('security_registration') }}">Inscrivez-vous ici</a>.</p>
        {% endif %}
    </div>
{% endblock %}
